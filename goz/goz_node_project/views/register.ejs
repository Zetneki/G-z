<%- include('includes/header', {error: error}) %>
<link rel="stylesheet" href="/css/register.css" />

<div class="register-wrapper">
  <div class="container2">
    <h2 id="register-text">Regisztráció</h2>
    <form action="/registeruser" method="post">
      <label for="register-username">Felhasználónév:</label>
      <input
        type="text"
        id="register-username"
        name="regusername"
        placeholder="Felhasználónév"
        maxlength="32"
        minlength="5"
        required
      />

      <label for="register-password">Jelszó:</label>
      <input
        type="password"
        id="register-password"
        name="regpassword"
        placeholder="Jelszó"
        maxlength="128"
        required
      />

      <label for="register-password-confirm">Jelszó megerősítése:</label>
      <input
        type="password"
        id="register-password-confirm"
        name="regpasswordconfirm"
        placeholder="Jelszó megerősítése"
        maxlength="128"
        required
      />

      <label for="register-email">E-mail:</label>
      <input
        type="email"
        id="register-email"
        name="regemail"
        placeholder="E-mail"
        required
      />

      <button type="submit" class="button">Regisztráció</button>
    </form>
  </div>
</div>

<%- include('includes/footer') %>
